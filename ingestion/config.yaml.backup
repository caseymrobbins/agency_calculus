# Configuration for ETL ingestion scripts in the Agency Monitor project.
# File: ingestion/config.yaml
config_version: "1.0.0"

# Section for the World Bank API Ingestion
world_bank:
  countries: ['USA', 'CHN', 'JPN', 'DEU', 'IND', 'GBR', 'FRA', 'ITA', 'CAN', 'BRA']
  start_year: 1960
  end_year: 2024
  batch_size: 100
  indicators:
    # Original indicators
    - code: NY.GDP.PCAP.CD
      name: GDP per capita (current US$)
      value_range: {min: 0}
    - code: SI.POV.GINI
      name: Gini index
      value_range: {min: 0, max: 100}
    - code: SL.UEM.TOTL.ZS
      name: Unemployment, total (% of total labor force)
      value_range: {min: 0, max: 100}
    - code: SI.POV.DDAY
      name: Poverty headcount ratio at $2.15 a day (2017 PPP) (% of population)
      value_range: {min: 0, max: 100}
    - code: SP.DYN.LE00.IN
      name: Life expectancy at birth, total (years)
      value_range: {min: 0, max: 100}
    - code: SH.XPD.CHEX.GD.ZS
      name: Current health expenditure (% of GDP)
      value_range: {min: 0}
    - code: SE.ADT.LITR.ZS
      name: Literacy rate, adult total (% of people ages 15 and above)
      value_range: {min: 0, max: 100}
    - code: SE.PRM.ENRR
      name: School enrollment, primary (% gross)
      value_range: {min: 0}
    # Additional indicators
    - code: FP.CPI.TOTL.ZG
      name: Inflation, consumer prices (annual %)
      value_range: {min: -100, max: 1000}
    - code: SI.DST.FRST.20
      name: Income share held by lowest 20%
      value_range: {min: 0, max: 100}
    - code: PV.EST
      name: Political Stability and Absence of Violence/Terrorism (estimate)
      value_range: {min: -3, max: 3}
    - code: VA.EST
      name: Voice and Accountability (estimate)
      value_range: {min: -3, max: 3}
    - code: GE.EST
      name: Government Effectiveness (estimate)
      value_range: {min: -3, max: 3}
    - code: SP.POP.GROW
      name: Population growth (annual %)
      value_range: {min: -10, max: 10}
    - code: SH.IMM.MEAS
      name: Immunization, measles (% of children ages 12-23 months)
      value_range: {min: 0, max: 100}
    - code: SH.STA.MALN.ZS
      name: Prevalence of underweight, weight for age (% of children under 5)
      value_range: {min: 0, max: 100}
    - code: SE.SEC.ENRR
      name: School enrollment, secondary (% gross)
      value_range: {min: 0}
    - code: SE.TER.ENRR
      name: School enrollment, tertiary (% gross)
      value_range: {min: 0}

# Replace your current v_dem section with this simple format:
v_dem:
  countries: ['USA', 'CHN', 'DEU', 'IND', 'JPN', 'GBR', 'FRA', 'ITA', 'CAN', 'BRA', 'HTI', 'SDN', 'MMR']
  start_year: 1960
  end_year: 2024
  indicators:
    - v2x_polyarchy
    - v2x_libdem
    - v2x_partipdem
    - v2x_delibdem
    - v2x_egaldem
    - v2x_freexp_altinf
    - v2x_frassoc_thick
    - v2x_suffr
    - v2xcl_rol
    - v2x_cspart
    - v2pepwrsoc
# Section for Freedom House (for future use)
freedom_house:
  file_path: "data/raw/All_data_FIW_2013-2024.xlsx"
  dataset_version: "FIW-2024"
  source_name: "Freedom-House"
  sheet_name: "All Data"
  countries:
    - USA
    - CHN
    - DEU
    - IND
    - JPN
    - GBR
    - FRA
    - ITA
    - CAN
    - BRA
    - HTI
    - SDN
    - MMR
  indicators:
    - source_key: PR
      code: FH_POLITICAL_RIGHTS
      name: "Political Rights Score"
      domain: political
      type: numeric
      value_range: {min: 0, max: 40}
      normalization: {max: 40}
    - source_key: CL
      code: FH_CIVIL_LIBERTIES
      name: "Civil Liberties Score"
      domain: political
      type: numeric
      value_range: {min: 0, max: 60}
      normalization: {max: 60}

# Section for UNDP Human Development Report (for future use)
undp:
  file_path: "data/raw/HDR25_Composite_indices_complete_time_series.csv"
  dataset_version: "HDR-2025"
  source_name: "UNDP"
  countries:
    - USA
    - CHN
    - DEU
    - IND
    - JPN
    - GBR
    - FRA
    - ITA
    - CAN
    - BRA
    - HTI
    - SDN
    - MMR
  indicators:
    - source_key: "hdi"
      code: UNDP_HDI
      name: "Human Development Index"
      domain: social
      type: numeric
      value_range: {min: 0, max: 1}
    - source_key: "ihdi"
      code: UNDP_IHDI  
      name: "Inequality-adjusted HDI"
      domain: social
      type: numeric
      value_range: {min: 0, max: 1}
    - source_key: "gii"
      code: UNDP_GII
      name: "Gender Inequality Index"
      domain: social
      type: numeric
      value_range: {min: 0, max: 1}

# Database configuration
database:
